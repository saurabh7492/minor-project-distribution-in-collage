 <%-include("partials/header");-%>
<h1>admin  page </h1>
<style media="screen">
  table, th, td {
    border:1px solid black;
  }


</style>

<div class="row  py-0 px-0">
  <div class="col ">
    <nav class="navbar fixed-top navbar-dark bg-dark navbar-expand-lg bg-light  " >
      <a href="#" class="navbar-brand">
        <img class="img-fluid" height="40px" width="40px" src="images/manipal_university_logo.png" alt="">
      </a>
      <button class="navbar-toggler" data-toggle="collapse" data-target="#mynavbar">
        <span class="navbar-toggler-icon"> </span>
      </button>
      <div class="collapse navbar-collapse" id="mynavbar">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active ml-1rem"><a href="#" class="nav-link">Home</a></li>
          <li class="nav-item "><a  class="nav-link"href="/dashbord">Dashbord</a>
          </li>
          <li class="nav-item"><a href="#" class="nav-link">Project Detail </a></li>
          <li class="nav-item"><a href="#" class="nav-link"> Your Project </a></li>
        </ul>
      </div>
    </nav>
  </div>
</div>
<div class="container">
  <h1 class="mt-5  p-5 text-center"> Admin page </h1>
  <div class="row">
    <div class="">
 <% if(posts!=null){ %>
<table  class="table table-dark table-hover table-sm table-responsive ">
 <thead class="">

  <tr>
    <th scope="col">Faculity name </th>
    <th scope="col"> Desigination</th>
    <th scope="col"> Project Title</th>
    <th scope="col"> Brief Description</th>
    <th scope="col">objective of project</th>
    <th scope="col">Skill expected from the students for project</th>
    <th scope="col"> Faculity mobile number </th>
    <th scope="col"> student name 1</th>
    <th scope="col"> student name 2</th>
    <th scope="col"> student mobilenumber </th>
    <th scope="col"> Edit the detail  of the student </th>
  </tr>
  </thead>
  <tbody>
    <% posts.forEach(function(post) { %>

          <tr>
           <th scope="row "></th>
              <td><%=post.faculitySchema%></td>
              <td><%=post.Degination %></td>
              <td><%=post.ProjectTitle%></td>
              <td><%=post.briefDescription%></td>
              <td><%=post.objectiveProject%></td>
              <td><%=post.skillRequired%></td>
              <td> <%=post.faculitymobilenumber %></td>
              <td><% post.studentdetail.length >= 1 ? post.studentdetail[0].name1:"" %></td>
              <td> <% post.studentdetail.length >= 1 ? post.studentdetail[0].name2:"" %></td>
              <td> <% post.studentdetail.length >= 1 ? post.studentdetail[0].mobilenumber:"" %></td>

              <td>
                <form class="" action="/adminsubmit" method="post">
                  <input type="text" name="name1" value="" placeholder=" name1">
                  <input type="text" name="name2" value="" placeholder=" name1">
                  <input type="text" name="" value="" placeholder=" mobilenumber">
                  <button type="submit" name="button" class="btn btn-primary "     value="<%=post._id%>"> edit </button>
                </form>

              </td>
              </tr>


    <%  }) %>
  </tbody>
</table>
<%}%>
</div>
</div>
</div>

<%-include("partials/footer");-%>
